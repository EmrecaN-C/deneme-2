    <button onclick="toTechCareer()">Go to Link</button>

    <script>

        let confirmText = "Geleceği Yazanlar Web sayfasına erişmek istiyor musunuz ?";

        let url = "https://www.techcareer.net/?utm_campaign=Techcareer_TC_Search_Branding&utm_source=google&utm_medium=cpc&gclid=EAIaIQobChMIzKnDy9fM_gIVmuFRCh2i8g84EAAYASAAEgIq7fD_BwE";
        function toTechCareer() {
            if (confirm(confirmText)) {
                location.href = url
            }
        }
    </script>

    <input type="text" id="onBlur" data-analytics-title="" onblur="onBlur()" placeholder="Adınız">

    <script>

        function onBlur() {
            let newValue = document.getElementById('onBlur')
            newValue.value = newValue.value.toUpperCase()
        }

    </script>

    <select name="" onblur="onChange()" id="box">
        <option value="almanya">Almanya</option>
        <option value="tr">Türkiye</option>
        <option value="us">Amerika</option>
    </select>


    <script>
        function onChange() {
            let newItem = document.getElementById('box').value;
            console.log('Yeni seçilen eleman ' + newItem)
        }
    </script>

